<header class="c-navbar js-navbar">
  <div class="c-navbar__inner is-sticky">
    <button class="c-navbar__overlay" aria-hidden="true" tabIndex="0"></button>
    <nav class="c-navbar__wrap" role="navigation">
      <button class="c-navbar__toggle" aria-hidden="true" tabIndex="0"><span class="c-navbar__toggle-bars"></span></button>
      <a href= '<%= root_path %>' class="c-navbar__logo" style="width:100px">
       <%= image_tag "cv-logo.png"%>
      </a>
      <div class="c-navbar__content-wrapper">
        <ul class="c-navbar__content">
          <li class="c-navbar__item ">
            <%=link_to "Guide",:guide, action: "index", class: "c-navbar__link u-no-underline"%>
            
          </li>
          <li class="c-navbar__item" aria-haspopup="true" aria-expanded="false">
            <button class="c-navbar__dropdown-toggle is-active">Templates</button>
          </li>
          <li class="c-navbar__item">
            <a href="/nebula/pulsars" class="c-navbar__link">
              <div class="c-icon"><span class="c-icon__text" style="vertical-align:middle">About us</span>
                <svg viewBox="0 0 47.001 47.001" class="c-icon__svg c-icon__svg--right" role="presentation" style="width:24px;height:24px;vertical-align:middle">
                  <use xlink:href="#lightbulb"></use>
                </svg>
              </div>
            </a>
          </li>
        </ul>
        <ul class="c-navbar__content c-navbar__content--right  c-navbar__content--keep-at-top">
          <li class="c-navbar__item c-navbar__item--reset-line-height js-navbar-cta" aria-haspopup="true" aria-expanded="true">
             <%= render "shared/sign_up"%>
          </li>
          <li class="c-navbar__item c-navbar__item--reset-line-height js-navbar-cta" aria-haspopup="true" aria-expanded="true">
             <%= render "shared/log_in"%>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>
