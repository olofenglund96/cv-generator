
   <% if @experiences.size == 0 %>
    
    <div class="o-grid o-grid--gudder-sm">
      <div class="o-grid__item u-1/4">
        No experiences associated with this CV yet.
      </div>
    </div>
    <% else  %>
     <div class="c-table-container">
      <table class="c-table c-table--stack@max-sm c-table--spacing-sm">
        <thead class="c-table__header">
          <tr class="c-table__row c-table__header-row">
            <th class="c-table__header-cell">Company</th>
            <th class="c-table__header-cell">Description</th>
            <th class="c-table__header-cell c-table__header-cell--sortable">
              <button class="c-table__sort-button"><span class="c-table__sort-text">Start</span></button>
            </th>
            <th class="c-table__header-cell c-table__header-cell--sortable">
              <button class="c-table__sort-button"><span class="c-table__sort-text">End</span></button>
            </th>
          </tr>
        </thead>
        <tbody class="c-table__body">
        <% @experiences.each do |exp| %>
          <tr class="c-table__row">
            <td class="c-table__cell"><%= exp.company %></td>
            <td class="c-table__cell"><%= raw(exp.description).truncate(200, separator: ' ') %></td>
            <td class="c-table__cell"><%= exp.start_date %></td>
            <td class="c-table__cell"><%= exp.end_date %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%end%>