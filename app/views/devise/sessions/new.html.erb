
<%= render partial: "shared/menu" %>
<%= render partial: "shared/user-header"%>
<div class="o-site-wrap o-site-wrap--padding">
<div class="u-soft-top-md">
<div class="u-soft-top-md u-2/3@md u-margin-auto">
<h2>Log in</h2>
<div class="u-bg-shadow--sm u-bg-shadow--sm--hover u-soft-md">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions u-push-bottom-md">
    <%= f.button :submit, "Log in", class: "c-btn c-btn--beta c-btn--sm u-no-underline" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>

